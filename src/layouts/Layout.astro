<script>
// 全局相册功能 - 重构版本
class GalleryManager {
	constructor() {
		this.isInitialized = false;
		this.clickHandler = null;
	}

	init() {
		// 检查是否在相册页面
		const galleryGroups = document.querySelectorAll('.gallery-group');
		if (galleryGroups.length === 0) return;

		// 清理之前的监听器
		this.cleanup();

		// 创建新的点击处理器
		this.clickHandler = (e) => this.handleClick(e);
		document.addEventListener('click', this.clickHandler);
		this.isInitialized = true;
	}

	cleanup() {
		if (this.clickHandler) {
			document.removeEventListener('click', this.clickHandler);
			this.clickHandler = null;
		}
		this.isInitialized = false;
	}

	handleClick(e) {
		// 处理相册头部点击（展开/折叠）
		const galleryHeader = e.target.closest('.gallery-header');
		if (galleryHeader) {
			e.preventDefault();
			this.toggleGallery(galleryHeader);
			return;
		}

		// 处理图片点击（查看大图）
		const galleryImage = e.target.closest('.gallery-image');
		if (galleryImage) {
			e.preventDefault();
			const imageSrc = galleryImage.getAttribute('data-image');
			if (imageSrc) {
				this.showImageModal(imageSrc);
			}
		}
	}

	toggleGallery(header) {
		const group = header.closest('.gallery-group');
		const content = group.querySelector('.gallery-content');
		const icon = header.querySelector('.expand-icon');

		if (content.classList.contains('hidden')) {
			// 展开
			content.classList.remove('hidden');
			group.classList.add('expanded');
			if (icon) icon.style.transform = 'rotate(180deg)';
		} else {
			// 折叠
			content.classList.add('hidden');
			group.classList.remove('expanded');
			if (icon) icon.style.transform = 'rotate(0deg)';
		}
	}

	showImageModal(imageSrc) {
		// 创建模态框元素
		const modal = document.createElement('div');
		modal.className = 'gallery-modal fixed inset-0 bg-black bg-opacity-90 flex items-center justify-center z-50 p-4';
		modal.style.opacity = '0';
		modal.style.transition = 'opacity 0.3s ease';
		
		const modalContent = document.createElement('div');
		modalContent.className = 'relative max-w-full max-h-full';
		
		const img = document.createElement('img');
		img.src = imageSrc;
		img.alt = '查看图片';
		img.className = 'max-w-full max-h-full object-contain rounded-lg';
		img.style.transform = 'scale(0.9)';
		img.style.transition = 'transform 0.3s ease';
		
		const closeBtn = document.createElement('button');
		closeBtn.className = 'close-btn absolute top-4 right-4 bg-black bg-opacity-50 text-white p-2 rounded-full hover:bg-opacity-70 transition-colors';
		closeBtn.innerHTML = `
			<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
			</svg>
		`;
		
		modalContent.appendChild(img);
		modalContent.appendChild(closeBtn);
		modal.appendChild(modalContent);
		document.body.appendChild(modal);
		
		// 显示动画
		requestAnimationFrame(() => {
			modal.style.opacity = '1';
			img.style.transform = 'scale(1)';
		});
		
		// 事件处理
		const closeModal = () => {
			modal.style.opacity = '0';
			img.style.transform = 'scale(0.9)';
			setTimeout(() => {
				if (document.body.contains(modal)) {
					document.body.removeChild(modal);
				}
				document.removeEventListener('keydown', handleEsc);
			}, 300);
		};
		
		const handleEsc = (e) => {
			if (e.key === 'Escape') closeModal();
		};
		
		closeBtn.addEventListener('click', closeModal);
		modal.addEventListener('click', (e) => {
			if (e.target === modal) closeModal();
		});
		document.addEventListener('keydown', handleEsc);
	}


}

// 创建全局相册管理器实例
window.galleryManager = new GalleryManager();

// 相册初始化函数
const initGallery = () => {
	window.galleryManager.init();
};

// Swup集成
const setupGalleryWithSwup = () => {
	initGallery();
	
	if (window.swup) {
		window.swup.hooks.on("page:view", () => {
			// 页面切换后重新初始化
			setTimeout(initGallery, 50);
		});
		
		window.swup.hooks.on("content:replace", () => {
			// 页面内容替换前清理
			window.galleryManager.cleanup();
		}, { before: true });
	}
};

// 初始化
if (document.readyState === 'loading') {
	document.addEventListener('DOMContentLoaded', setupGalleryWithSwup);
} else {
	setupGalleryWithSwup();
}

// Swup启用时的处理
if (!window.swup) {
	document.addEventListener("swup:enable", setupGalleryWithSwup);
}
</script>
